@model List<Person>
@{ ViewData["Title"] = "Get By Id"; }

<div class="container" style="width:100%;">

    <form method="post" action="~/Home/GetInfo" style="margin:50px;">

        <div class="form-group">
            <label style="margin-right:10px" class="col-form-label" for="Id">ID:</label>
            <input class="form-control" type="number" name="Id" placeholder="please enter id" />
        </div>

        <div class="form-group">
            <input class="btn btn-outline-dark" type="submit" value="Search" />
        </div>

    </form>

</div>

<div class="container">

    @if (Model != null)
    {
        if (Model.Count > 0)
        {
<div class="table-responsive" style="width:100%">

    <table class="table-hover table-bordered" style="width:100%;">

        <thead>
            <tr style="text-align:center">
                <th>Id</th>
                <th>LastName</th>
                <th>FistName</th>
                <th>MiddleName</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var person in Model)
            {
<tr style="text-align:center;">
    <td>@person.Id</td>
    <td>@person.LastName</td>
    <td>@person.FirstName</td>
    <td>@person.MiddleName</td>
</tr>}
        </tbody>

    </table>

</div> }
                else
                {
<p class="bg-danger">Error: Not Found</p>}

            }

</div>


